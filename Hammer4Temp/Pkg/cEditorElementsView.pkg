    Procedure Set GuiSize Integer iY Integer iX
        Integer hoTD
        Integer iSearchHeight
        Move (oTabDialog(Self)) To hoTD
        Forward Set GuiSize To iY iX
        If hoTD Begin
            Set GuiSize     Of hoTD To (Hi(Client_Size(Self))-15) (Low(Client_Size(Self))+1) //-6
            Set GuiLocation Of oTabPage1          To 3 3
            Set GuiLocation Of oTabPage2          To 3 3
            Move (Hi(Client_Size(hoTD))-28)       To iY
            Move (Low(Client_Size(hoTD))-6)       To iX
            //
            Set GuiLocation of oSearch            to 0 0
            Move (Hi(GuiSize(oSearch)))           To iSearchHeight
            Set GuiSize     of oSearch            to iSearchHeight (iX-40)
            
            //
            Set GuiLocation of oSearchDown        to 0 (iX-40)
            Set GuiSize     of oSearchDown        to iSearchHeight 20
            Set GuiLocation of oSearchUp          to 0 (iX-20)
            Set GuiSize     of oSearchUp          to iSearchHeight 20
            //
            Set GuiLocation of oEditorElementView to (iSearchHeight-1) 0
            Set GuiSize     of oEditorElementView to (iY-iSearchHeight) iX
            Set GuiSize     of oFilesView         to iY iX
        End
    End_Procedure

        // Delivers the Handle of a file.
    Function HandleOfFile String sFile Returns Handle
        Integer hoID hItem
        Move (oEditorElementView(oTabPage1(oTabDialog(Self))))  To hoID
        Function_Return (HandleOfFile(hoID,sFile))
    End_Function

    Procedure AddFile String sFile Integer iOpen
        Integer hoID hItem
        Move (oFilesView(oTabPage2(oTabDialog(Self))))          To hoID
        //move (oEditorElementView(oTabPage1(oTabDialog(Self))))  to hoID
        Get AddFile      Of hoID sFile iOpen                    To hItem
        Procedure_Return hItem
    End_Procedure

    Procedure RemoveFile String sFile
        Send  RemoveFile To oEditorElementView                                sFile
    End_Procedure
    Procedure Set Current_Item Integer iItem
      If (iItem<>0) Begin
        Set CurrentTreeItem Of oEditorElementView                                   To iItem
      End
    End_Procedure
    Procedure StartFillList String sFile
        Integer iCur hItem iRet iCounter
        tEditorElement[] ltEditorElements
        Get StartPerfCounter of ghoApplication CPC_BuildCodeExplorer sFile to iCounter
        Move (ResizeArray(ltEditorElements,0)) To ltEditorElements
        Set ptEditorElements of oEditorElementView  to ltEditorElements
        Set piPerfCounter to iCounter
        Set Dynamic_Update_State Of oEditorElementView  To False
        Set Dynamic_Update_State Of oFilesView          To False
        //get AddFile      of oEditorElementView sFile true     to hItem
        //set piFirstItem  of ghoElementsTree     to hItem
    End_Procedure
    Procedure EndFillList
        Integer hoID hoID2 iRet
        Move (oEditorElementView(oTabPage1(oTabDialog(Self))))      To hoID
        Move (oFilesView(oTabPage2(oTabDialog(Self))))              To hoID2
        Set Button_Shadow_State Of oTabPage2                        To (ItemCount(hoID2) Eq 0)
        Set Button_Shadow_State Of oTabPage1                        To (ItemCount(hoID ) Eq 0)
        Send SortItems To oFilesView                                0 0

        Set Object_Shadow_State To ((ItemCount(hoID) Eq 0) And (ItemCount(hoID2) Eq 0))
        Set Dynamic_Update_State Of hoID                            To True
        Set Dynamic_Update_State Of hoID2                           To True
        Send StopPerfCounter of ghoApplication (piPerfCounter(Self))
    End_Procedure
    Procedure DeleteEntry Integer iItem
        Send DoDeleteItem To oEditorElementView iItem
    End_Procedure
    Procedure AddNewListEntry Integer iOldItem String sName String sClass Integer iParent Integer iLine Integer iType Integer pElement
        Integer hElement
        Integer iElement
        String  sBitmap
        tEditorElement[] ltEditorElements
        Get ptEditorElements of oEditorElementView  to ltEditorElements
        If iType Eq MK_CLASS            Move (Append("Class ",sName))   To sName
        If iType Eq MK_SETPROCEDURE     Move (Append("Set ",sName))     To sName
        If iType Eq MK_PROPERTY Append sName " (" sClass ")"

        If iOldItem Eq 0 Move TVI_FIRST to iOldItem
        Move (ClassBitmaps(desktop,sClass,iType)) to sBitmap
        If (Uppercase(sClass) contains "DATADICTIONARY") Move "ttdd16.bmp" to sBitmap
        Get InsertTreeItemEx of oEditorElementView sName iOldItem iParent (iLine+5000) sBitmap sBitmap to hElement
        Move (SizeOfArray(ltEditorElements)) to iElement
        Move (Uppercase(sName)) to ltEditorElements[iElement].sName
        Move hElement           to ltEditorElements[iElement].hItem
        Set ptEditorElements of oEditorElementView  to ltEditorElements
        Procedure_Return hElement
    End_Procedure

    Procedure UpdateLineNr Integer iItem Integer iLine
        Handle hWnd
        Get Window_Handle of oEditorElementView to hWnd
        If (hWnd<>0) Begin
          Set ItemData Of oEditorElementView Item iItem To (5000+iLine)
        End
    End_Procedure
End_Class

