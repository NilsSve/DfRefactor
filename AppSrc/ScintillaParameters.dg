                    Procedure Add_New_Line String sStart String sStop Integer iColor
                        Send Add_Item Msg_None sStart
                        If (iColor) Begin
                            Set ItemTextColor (Item_Count(Self) - 1) to iColor
                        End
                        Send Add_Item Msg_None sStop
                        If (iColor) Begin
